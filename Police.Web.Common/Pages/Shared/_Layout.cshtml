<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Response to Resistance</title>
    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/css/vendor.min.css" />
        <link rel="stylesheet" href="~/css/app.min.css" />
    </environment>
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="skin-blue layout-top-nav">
    <environment names="Development">
        <mini-profiler position="@RenderPosition.BottomLeft" />
    </environment>

    <div class="wrapper">
        @RenderSection("modals", required: false)
        <header class="main-header">
            <vc:navigation for-home-page="false"></vc:navigation>
            @*<partial name="_Navigation" />*@

        </header>
        <div class="content-wrapper">
            <div class="container">
                <div class="row">
                    <section class="content-header">
                        <h1>
                            @RenderSection("header", required: false)
                        </h1>
                        <ol class="breadcrumb">
                            @RenderSection("breadcrumbs", required: false)
                        </ol>
                    </section>
                </div>
                <div class="row">
                    <section class="content">

                        <div id="modal-container">

                        </div>

                        @RenderBody()
                    </section>
                </div>
            </div>
        </div>
        <footer class="main-footer">
            <div class="container">
                <div class="pull-right hidden-xs">
                    <span class="text-danger" style="padding-left: 25px;">
                        <strong><i class="fa fa-warning"></i> Authorized Use Only</strong>
                    </span> |
                    <b>Version </b> 1.0
                </div>
                <strong>
                    @if (DateTime.Now.Year > 2018) {
                        @Html.Raw("Copyright &copy; 2018-" + DateTime.Now.Year.ToString() + ", City of La Crosse.")
                    } else {
                        @Html.Raw("Copyright &copy; 2018, City of La Crosse.")
                    }
                </strong>
                All Rights Reserved.

            </div>
        </footer>
    </div>
    <environment names="Development,Staging,Production">
        <script src="~/js/vendor.min.js"></script>
        <script src="~/js/app.min.js"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>